{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "flutter: clean",
			"command": "flutter clean"
		},
		{
			"type": "shell",
			"label": "flutter: pub get",
			"command": "flutter pub get"
		},
		{
			"type": "shell",
			"label": "ios: pod install",
			"command": "pod install",
			"options": {
				"cwd": "${workspaceFolder}/ios"
			}
		},
		{
			"type": "shell",
			"label": "project: rebuild",
			"dependsOrder": "sequence",
			"dependsOn": [
				"flutter: clean",
				"flutter: pub get",
				"ios: pod install"
			]
		},
		{
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"web",
				"--target=lib/web/main.dart",
			],
			"group": "build",
			"problemMatcher": [],
			"label": "release: web"
		},
		{
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--obfuscate",
				"--no-track-widget-creation",
				"--split-debug-info=build/app/outputs/bundle/release/map/"
			],
			"group": "build",
			"problemMatcher": [],
			"label": "release: apk"
		},
		{
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"appbundle",
				"--obfuscate",
				"--no-track-widget-creation",
				"--split-debug-info=build/app/outputs/bundle/release/map/"
			],
			"group": "build",
			"problemMatcher": [],
			"label": "release: appbundle"
		},
		{
			"type": "flutter",
			"command": "flutter",
			"args": [
				"pub",
				"run",
				"build_runner",
				"build",
				"--delete-conflicting-outputs"
			],
			"problemMatcher": [
				"$dart-build_runner"
			],
			"group": "build",
			"label": "build_runner: build --delete"
		}
	],
}
